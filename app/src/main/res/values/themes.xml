<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RDOKU" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pensive_gray</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/midnight_blue</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/dark_gray</item>
        <item name="tint">@color/dark_gray</item>
    </style>

    <style name="ButtonStyle" parent="Theme.AppCompat.DayNight">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/comfortaa_regular</item>
    </style>

    <style name="gameKeyboardButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">0dp</item>
        <item name="fontFamily">@font/comfortaa_bold</item>
    </style>

    <!-- Style of the Sudoku Board -->
    <style name="SudokuBoard" parent="Theme.AppCompat.DayNight">
        <item name="boardColor">@color/midnight_blue</item>
        <item name="highlightColor">@color/light_vanilla</item>
        <item name="cellFillColor">@color/dark_gray</item>
        <item name="numberColor">@color/dark_gray</item>
        <item name="collisionNumberColor">@color/bright_red</item>
    </style>

    <style name="Theme.RDOKU.ActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pensive_gray</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/clouds</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/dark_gray</item>
        <item name="tint">@color/dark_gray</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>